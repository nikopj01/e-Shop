<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-light">
            <a class="navbar-brand" href="#">
                <img src="~/Content/CompanyLogo/Black Logo.PNG" alt="Logo" style="width:60px;">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            SHOP
                        </a>
                        <div class="dropdown-menu">
                            <div class="dropdown dropright">
                                <a class="dropdown-item" href="#" data-toggle="dropdown">MENS</a>
                                <div class="dropdown-menu">
                                    @Html.ActionLink("TOPS", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("HOODIE/JACKETS", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("BOTTOMS", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("HATS", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                                </div>
                            </div>
                            @Html.ActionLink("WOMENS", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("ACCESSORIES", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("GIFT CARDS", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("FINAL SALE", "MenTops", "Collections", null, new { @class = "dropdown-item" })
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">BOLT COLLECTION</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">METAL POSTERS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">STREET HUNTER</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">2020 EVENTS</a>
                    </li>
                </ul>
                
                @if (Session["UserAccountID"] != null)
                {
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Currency
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Link 1</a>
                        <a class="dropdown-item" href="#">Link 2</a>
                        <a class="dropdown-item" href="#">Link 3</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "UserAccount", new { returnUrl = Request.Url.PathAndQuery})"><i style="font-size:24px" class="fa">&#xf007</i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i style="font-size:24px" class="fa fa-search"></i></a>
                </li>
                @{
                    Html.RenderAction("BasketPartial", "Basket");
                }
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "UserAccount", new { returnUrl = Request.Url.PathAndQuery})">Logout</a>
                </li>
            </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Currency
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Link 1</a>
                                <a class="dropdown-item" href="#">Link 2</a>
                                <a class="dropdown-item" href="#">Link 3</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "UserAccount", new { returnUrl = Request.Url.PathAndQuery})"><i style="font-size:24px" class="fa">&#xf007</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i style="font-size:24px" class="fa fa-search"></i></a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </div>
    @RenderBody()
    <footer>
        <div class="container" style="">
            <div class="row justify-content-center">
                <img src="~/Content/CompanyLogo/White Logo.PNG" alt="Logo" style="width:60px;">
            </div>
            <div class="row justify-content-center">
                Social Media
            </div>
            <div class="row justify-content-center">
                <nav class="navbar navbar-expand-md navbar-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="collapsibleNavbar">
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Return Policy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Shipping Policy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Terms of Service</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Privacy Policy</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>

            <div class="row justify-content-center">
                <p>&copy; @DateTime.Now.Year - NPJ</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
