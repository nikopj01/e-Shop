<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("List of Product", "Index", "ProductManager", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("List of Product Category", "ListOfProductCategory", "ProductManager", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("List of Product Type", "ListOfProductType", "ProductManager", null, new { @class = "nav-link" })
                    </li>
                    @*Drop down Navigation menu*@
                    @*<li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            PRODUCT
                        </a>
                        <div class="dropdown-menu">
                        </div>
                        @Html.ActionLink("List of Product", "Index", "ProductManager", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("List of Product Category", "ListOfProductCategory", "ProductManager", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("List of Product Type", "ListOfProductType", "ProductManager", null, new { @class = "dropdown-item" })
                    </li>*@
                </ul>
            </div>
        </nav>
    </div>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="row justify-content-center">
                <p>&copy; @DateTime.Now.Year - NPJ</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
